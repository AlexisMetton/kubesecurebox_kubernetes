apiVersion: v1
kind: Secret
metadata:
  name: kubesecurebox-secrets
  namespace: kubesecurebox
type: Opaque
data:
  # Base64 encoded values (echo -n "value" | base64)
  # IMPORTANT: Remplacez ces valeurs par vos propres secrets encodés en base64
  postgres-password: <BASE64_ENCODED_PASSWORD>  # echo -n "your_password" | base64
  postgres-user: <BASE64_ENCODED_USER>          # echo -n "your_user" | base64
  postgres-db: <BASE64_ENCODED_DB_NAME>         # echo -n "your_db" | base64
  # VPN credentials - Obtenez vos credentials depuis votre fournisseur VPN
  vpn-username: <BASE64_ENCODED_VPN_USERNAME>   # echo -n "your_vpn_user" | base64
  vpn-password: <BASE64_ENCODED_VPN_PASSWORD>   # echo -n "your_vpn_pass" | base64
---
# Secret pour l'authentification au registre Docker privé
apiVersion: v1
kind: Secret
metadata:
  name: registry-secret
  namespace: kubesecurebox
type: kubernetes.io/dockerconfigjson
data:
  # Créez ce secret avec :
  # kubectl create secret docker-registry registry-secret \
  #   --docker-server=your-registry.example.com:5000 \
  #   --docker-username=your_user \
  #   --docker-password=your_password \
  #   -n kubesecurebox
  .dockerconfigjson: <BASE64_ENCODED_DOCKER_CONFIG>
